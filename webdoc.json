
{
    "tags": {
      "allowUnknownTags": false
    },
    "source": {
      "include": [
        "src/**/*.ts"
      ]
    },
    "plugins": [
      "plugins/markdown"
    ],
    "template": {
      "readme": "./README.md",
      "repository": "https://github.com/pixijs/graphics-smooth/"
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false,
      "default": {
        "outputSourceFiles": false
      },
      "applicationName": "PixiJS Smooth Graphics",
      "copyright": "Copyright &copy; 2015 - 2022 Ivan Popelyshev",
      "linenums": false,
      "meta": {
        "title": "PixiJS Smooth Graphics API Documentation",
        "description": "Documentation for PixiJS Smooth Graphics library",
        "keyword": "docs, documentation, pixi, pixijs, rendering, graphics, display, antialias, javascript"
      }
    },
    "markdown": {
      "parser": "gfm",
      "hardwrap": false
    },
    "opts": {
      "encoding": "utf8",
      "recurse": true,
      "private": false,
      "lenient": true,
      "destination": "docs",
      "template": "@pixi/webdoc-template"
    }
  }